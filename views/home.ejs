            <section id="property-list">
                <div class="page-container">
                    <h2>Discover our Featured property </h2>
                    <% indexproperties.forEach(property=> { %>
                        <div class="property-card row">
                            <div class="image-container col-md-4">
                                <img src="<%=property.propertyimg%>" />
                            </div>
                            <div class="content-container col-md-8">
                                <div class="row no-gutters justify-content-between">
                                    <div class="star-container" title="3.5">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <div class="interested-container">
                                        <i class="far fa-heart"></i>
                                        <div class="interested-text">
                                            <%=property.interestedCount %> interested
                                        </div>
                                    </div>
                                </div>
                                <div class="detail-container">
                                    <div class="property-name">
                                        <%=property.name%>
                                    </div>
                                    <div class="property-address"><img src="img/amenities/pin_927667.png"
                                            style="width: 17px;" alt="">
                                        <%=property.address %>
                                    </div>
                                    <div class="property-gender">
                                        <img src="<%=property.img %>" /><span>
                                            <%=property.gender%>
                                        </span>
                                    </div>
                                </div>
                                <div class="row no-gutters">
                                    <div class="rent-container col-6">
                                        <div class="rent"><i class="fas fa-solid fa-indian-rupee-sign"></i>
                                            <%=property.price %>
                                        </div>
                                        <div class="rent-unit">per month</div>
                                    </div>
                                    <div class="button-container col-6">
                                        <a href="/index_property_detail/<%= property.id %>" class="btn ">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% }); %>
                </div>
                <a href="/property_list" class="btn all-btn">view all properties</a>
            </section>









