<body>
    <!--------------------------------header------------------------>
    <div class="header sticky-top">
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand" href="/">
                <!-- <img src="img/logo.png" /> -->
                PG<em>life</em>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#my-navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="my-navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/signin">
                            <!-- data-toggle="modal" data-target="#signup-modal" -->
                            <img src="img\add-contact_3979399.png" style="width: 30px;"></img> <span>signin</span>
                        </a>
                    </li>

                    <div class="nav-vl"></div>

                    <li class="nav-item">
                        <a class="nav-link" href="/login">
                            <img src="img/man-avatar_3954071 (1).png" class="pt-1" style="width: 24px;"></img>
                            <span>login</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <% if (messages.error && messages.error.length> 0) { %>
        <div class="error-message text-center">
            <%= messages.error[0] %>
        </div>
        <% } %>


            <section class="login">

                <div class="max-width-login">

                    <div class="modal-body">
                        <h4 class="text-left pb-3">login to PG<em>life</em></h4>
                        <form action="/login" method="POST">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <input type="email" class="form-control" name="username" placeholder="Email" required>
                            </div>

                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" name="password" placeholder="Password"
                                    minlength="6" required>
                            </div>

                            <div class="form-group">
                                <button type="submit" value="submit" class="btn btn-block ">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <span>
                            <a href="/signin">Click here</a>
                            to register a new account
                        </span>
                    </div>
                </div>
            </section>



